generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Csoport {
  id        Int         @id @default(autoincrement())
  osztaly   String
  csoport   Int
  kod       String      @unique
  enabled   Boolean     @default(true)
  QrCsoport QrCsoport[]
}

model Qr {
  id          Int         @id @default(autoincrement())
  kod         String      @unique
  ertek       Int         @default(1)
  hasznalhato Int         @default(1)
  enabled     Boolean     @default(true)
  lat         Decimal     @default(0.0)
  lng         Decimal     @default(0.0)
  QrCsoport   QrCsoport[]
  Feladat     Feladat[]
}

model QrCsoport {
  id        Int      @id @default(autoincrement())
  qrId      Int
  qr        Qr       @relation(fields: [qrId], references: [id])
  csoportId Int
  csoport   Csoport  @relation(fields: [csoportId], references: [id])
  mikor     DateTime @default(now())
}

model Feladat {
  id       Int    @id @default(autoincrement())
  feladat  String @unique
  megoldas String @default("")
  //? Segítség?
  qrId     Int
  qr       Qr     @relation(fields: [qrId], references: [id])
}

